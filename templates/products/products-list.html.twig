{% extends 'products/index.html.twig' %}

{% block container %}
    {% for b in products %}
        <div id="controller-list" >
            <div class="controller-list" >
            <!-- product 1 -->
                <div class="wrapper"> 
                    <div class="overviewInfo">
                        <div class="actions">
                        <div class="backbutton"></div>
                        <div class="cartbutton neurobutton"></div>
                    </div>
        
                    <div class="productinfo">
                        <div class="grouptext">
                        <h3>PLATFORM</h3>
                        <p>PS5</p>
                        </div>
                        <div class="grouptext">
                        <h3>RELEASE</h3>
                        <p>Fall 2020</p>
                        </div>
                        <div class="grouptext">
                        <h3>PRICE</h3>
                        <p>${{b.price}}</p>
                        </div>
                    
                        <div class="productImage">
                        <img src="{{b.img}}" alt="product: ps5 controller image">
                        </div>          
                    </div>         
                </div> 
                
                <!-- overview info -->      
                    <div class="productSpecifications">
                        <h1> {{b.name}} </h1>
                        <p> {{b.description}} </p>        
                    <div class="productFeatures">
                        <div class="feature">
                        <div class="featureIcon"></div>
                        <div class="featureText">
                            <p> <strong>Futuristic</strong></p>
                            <p>Design</p>
                        </div>
                        </div>
                        
                        <div class="feature">
                        <div class="featureIcon"></div>
                        <div class="featureText">
                            <p> <strong>Built-in</strong></p>
                            <p>Microphone</p>
                        </div>
                        </div>
                        <div class="feature">
                        <div class="featureIcon"></div>
                        <div class="featureText">
                            <p> <strong>Haptic</strong></p>
                            <p>Feedback</p>
                        </div>
                        </div>
                        <div class="feature">
                        <div class="featureIcon"></div>
                        <div class="featureText">
                            <p> <strong>Fast charge</strong></p>
                            <p>USB-C port</p>
                        </div>
                        </div>
                    </div>
                
                    <div class="checkoutButton">
                        <button class="preorder">
                        <p>Out of Stock</p>
                        <div class="buttonaction"></div>
                        </button> 
                    </div>
                </div>     
        </div> 
        
    {% endfor %}
{% endblock %}

